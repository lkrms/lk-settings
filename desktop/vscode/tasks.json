{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Pretty PHP",
            "type": "process",
            "command": "php7",
            "args": [
                "${env:HOME}/Code/dev-tools/pretty-php/pretty.php",
                "${file}"
            ],
            "options": {
                "env": {
                    "PRETTY_ALIGN_RANGE": "12"
                }
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "never",
                "panel": "new",
                "close": true
            }
        },
        {
            "label": "Pretty PHP (remove empty lines)",
            "type": "process",
            "command": "php7",
            "args": [
                "${env:HOME}/Code/dev-tools/pretty-php/pretty.php",
                "${file}"
            ],
            "options": {
                "env": {
                    "PRETTY_NESTED_ARRAYS": "0",
                    "PRETTY_REMOVE_EMPTY_LINES": "1",
                    "PRETTY_IGNORE_LINE_BREAKS": "1"
                }
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "never",
                "panel": "new",
                "close": true
            }
        }
    ]
}