{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Pretty PHP",
            "type": "process",
            "command": "pretty-php.phar",
            "args": [
                //"--skip",
                //"indent-heredocs",
                "${file}"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "never",
                "panel": "new",
                "close": true
            }
        },
        {
            "label": "Pretty PHP (remove empty lines)",
            "type": "process",
            "command": "pretty-php.phar",
            "args": [
                //"--skip",
                //"indent-heredocs",
                "-N",
                "${file}"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "never",
                "panel": "new",
                "close": true
            }
        },
        {
            "label": "Pretty PHP (old)",
            "type": "process",
            "command": "php",
            "args": [
                "${env:HOME}/Code/dev-tools/pretty-php/pretty.php",
                "${file}"
            ],
            "options": {
                "env": {
                    "PRETTY_ALIGN_RANGE": "12"
                }
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "never",
                "panel": "new",
                "close": true
            }
        },
        {
            "label": "Print runtime config",
            "type": "shell",
            "command": "echo",
            "args": [
                "${config:editor.cursorBlinking}"
            ],
            "problemMatcher": []
        }
    ]
}